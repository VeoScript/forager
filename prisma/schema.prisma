// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  id                    String                @id               @default(uuid())
  avatar                String?
  bio                   String?
  name                  String
  phone                 String                @unique
  username              String                @unique
  email                 String                @unique
  password              String
  dishes                Dishes[]
  comments              Comments[]
}

model Dishes {
  id                    String                @id               @default(uuid())
  title                 String
  category              String
  description           String
  date                  String
  comments              Comments[]
  ingredients           Ingredients[]
  user                  Users                                   @relation(fields: [userId], references: [id])
  userId                String
}

model Ingredients {
  id                    String                @id               @default(uuid())
  ingredient            String
  dish                  Dishes                                  @relation(fields: [dishId], references: [id])
  dishId                String
}

model Comments {
  id                    String                @id               @default(uuid())
  comment               String
  date                  String
  dish                  Dishes                                  @relation(fields: [dishId], references: [id])
  dishId                String
  user                  Users                                   @relation(fields: [userId], references: [id])
  userId                String
}